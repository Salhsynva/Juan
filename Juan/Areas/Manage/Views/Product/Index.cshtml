@model List<Product>
@{
    ViewData["Title"] = "Poducts";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pr in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@pr.Name</td>
                            <td>@pr.Price</td>
                            <td>@pr.Desc</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
